<h2>{$header}</h2>
{$intro}
<form name="{$form_name}" action="{$form_action}" method="post">
  <input type="hidden" name="{$action_name}" value="{$action_value}" />
  <input type="hidden" name="{$id_name}" value="{$id_value}" />
  <div class="ed_question_box">
    <div class="ed_question">
      {$question}
    </div>
  </div>
  {$answers}
  <div class="ed_buttons">
    <input type="submit" value="{$btn_ok}" />&nbsp;
    <input type="button" value="{$btn_abort}" onclick="javascript: window.location = '{$abort_location}'; return false;" />&nbsp;
  </div>
</form>